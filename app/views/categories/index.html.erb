<h1>Categories Dashboard</h1>

<table>
	<tr>
		<td>Category | Orders</td>
	</tr>
	<% @categories.each do |category| %>
	<tr>
		<td><%= category.name.humanize %> <%= link_to "(edit)", edit_category_path(category) %> | <%= category.orders.count %></td>
	</tr>
	<% end %>
</table>


<div class="footer">
	<%= link_to "New Category", new_category_path %>
</div>